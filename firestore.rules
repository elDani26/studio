/**
 * @fileoverview Firestore Security Rules for the application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model. Users can only
 * access their own profiles, source accounts, and transactions.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profiles, accessible only by the user.
 * - /users/{userId}/sourceAccounts/{sourceAccountId}: Stores source accounts owned by the user.
 * - /users/{userId}/transactions/{transactionId}: Stores transactions created by the user.
 *
 * Key Security Decisions:
 * - Users can only create their own user document using their UID as the document ID.
 * - Users can only access source accounts and transactions that are nested under their user ID.
 * - No public listing of users, source accounts, or transactions is allowed.
 *
 * Denormalization for Authorization:
 * - The 'userId' field within SourceAccount and Transaction documents is used
 *   to enforce ownership and must match the userId in the path.
 *
 * Force backend re-sync to enable auth providers.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user profiles.
     * @path /users/{userId}
     * @allow (create) - User with UID 'user_abc' can create their profile if userId == 'user_abc'.
     * @allow (get, update, delete) - User with UID 'user_abc' can read, update, and delete their profile if userId == 'user_abc'.
     * @deny (create) - User with UID 'user_def' cannot create a profile with userId 'user_abc'.
     * @deny (get, update, delete) - User with UID 'user_def' cannot read, update, or delete the profile with userId 'user_abc'.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return isSignedIn() && request.auth.uid == userId;
      }

      allow get: if isOwner(userId);
      allow list: if false;

      allow write: if isOwner(userId);
      allow delete: if isOwner(userId) && resource != null;
    }

    /**
     * @description Controls access to source accounts owned by a user.
     * @path /users/{userId}/sourceAccounts/{sourceAccountId}
     * @allow (create, get, update, delete) - User 'user_abc' can create, read, update, and delete their own source accounts.
     * @deny (create, get, update, delete) - User 'user_def' cannot access source accounts owned by 'user_abc'.
     * @principle Enforces document ownership and referential integrity.
     */
    match /users/{userId}/sourceAccounts/{sourceAccountId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return isSignedIn() && request.auth.uid == userId;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);

      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isOwner(userId) && resource.data.userId == userId && resource != null;
      allow delete: if isOwner(userId) && resource != null;
    }

    /**
     * @description Controls access to transactions created by a user.
     * @path /users/{userId}/transactions/{transactionId}
     * @allow (create, get, update, delete) - User 'user_abc' can create, read, update, and delete their own transactions.
     * @deny (create, get, update, delete) - User 'user_def' cannot access transactions owned by 'user_abc'.
     * @principle Enforces document ownership and referential integrity.
     */
    match /users/{userId}/transactions/{transactionId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return isSignedIn() && request.auth.uid == userId;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);

      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isOwner(userId) && resource.data.userId == userId && resource != null;
      allow delete: if isOwner(userId) && resource != null;
    }
  }
}
